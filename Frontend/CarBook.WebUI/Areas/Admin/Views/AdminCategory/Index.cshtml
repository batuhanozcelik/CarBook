@model List<CarBook.Dto.CategoryDtos.ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Blog Kategori Listesi</h4>
						<p class="card-subtitle mb-4">
							Blogların kategori listesini bu sayfada görebilirsiniz. Kategori ekleme, silme ve güncelleme işlemlerini bu sayfada gerçekleştirebilirsiniz.
						</p>
						<div class="table-responsive">
							<table class="table mb-0">
								<thead>
									<tr>
										<th>#</th>
										<th>Kategori Adı</th>
										<th>Sil</th>
										<th>Güncelle</th>
										<th>Kategoriye Ait Bloglar</th>


									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										<tr>
											<th scope="row">@count</th>
											<td>@item.Name</td>
											<td><a href="/Admin/AdminCategory/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger">Sil</a></td>
											<td><a href="/Admin/AdminCategory/UpdateCategory/@item.CategoryId" class="btn btn-outline-success">Güncelle</a></td>
											<td><a href="/Admin/AdminCategory/#" class="btn btn-outline-dark">Kategoriye Ait Bloglar</a></td>
										</tr>
									}

								</tbody>
							</table>
							<a href="/Admin/AdminCategory/CreateCategory/" class="btn btn-primary">Yeni Kategori Oluştur</a>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>

