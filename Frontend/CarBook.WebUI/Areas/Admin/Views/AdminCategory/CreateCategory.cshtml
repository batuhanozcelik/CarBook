@model CarBook.Dto.CategoryDtos.CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Yeni Kategori</h4>
						<p class="card-subtitle mb-4">Kategori ile ilgili işlemlerin gerçekleştirileceği sayfadır. Yazarlar ile ilgili tüm alanların eksiksiz tamamlanması gerekmektedir.</p>

						<form method="post">
							<div class="form-group">
								<label>Kategori Adı</label>
								<input type="text" class="form-control" asp-for="Name" placeholder="Başlık Giriniz">
							</div>
							<button type="submit" class="btn btn-success waves-effect waves-light">Kategori Oluştur</button>
						</form>

					</div>
				</div>
			</div>

		</div>
	</div>
</div>


