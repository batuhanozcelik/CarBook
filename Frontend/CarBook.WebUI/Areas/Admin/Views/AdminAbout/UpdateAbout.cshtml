@model CarBook.Dto.AboutDtos.UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Yeni Hakkımızda Bilgisi Girişi</h4>
						<p class="card-subtitle mb-4">Hakkımızda alanına veri girişini aşağıdaki panelden yapabilirsiniz. Tasarımda bozulma olmamasi için lütfen <strong>1 adet</strong> veri girişi yapınız.Yeni banner girişi yaptıktan sonra önceki banner alanı verisini silmeniz gerekmektedir.</p>

						<form method="post">
							<div class="form-group">
								<input type="hidden" asp-for="AboutId" />
								<label>Başlık</label>
								<input type="text" class="form-control" asp-for="Title" placeholder="Başlık Giriniz">
							</div>
							<div class="form-group">
								<label>Açıklama</label>
								<textarea type="text" class="form-control" asp-for="Description" placeholder="Açıklama Giriniz"></textarea>
							</div>
							<div class="form-group">
								<label>Görsel URL</label>
								<input type="text" class="form-control" asp-for="ImageUrl" placeholder="Kapak Fotoğraf Linki Giriniz">
							</div>
							<button type="submit" class="btn btn-success waves-effect waves-light">Hakkımızda Bilgisini Güncelle</button>
						</form>

					</div>
				</div>
			</div>

		</div>
	</div>
</div>

