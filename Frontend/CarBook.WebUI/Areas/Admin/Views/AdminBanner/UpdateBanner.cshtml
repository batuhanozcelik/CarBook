@model CarBook.Dto.BannerDtos.UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Banner Bilgisi Güncelleme</h4>
						<p class="card-subtitle mb-4">Gerekli kısma veri girişi yaptıktan sonra "Banner Bilgisi Güncelle" butonuna tıklayarak yeni bilgiyi güncelleyebilirsiniz.</p>

						<form method="post">
							<div class="form-group">
								<input type="hidden" asp-for="BannerId" />
								<label>Başlık</label>
								<input type="text" class="form-control" asp-for="Title" placeholder="Başlık Giriniz">
							</div>
							<div class="form-group">
								<label>Açıklama</label>
								<input type="text" class="form-control" asp-for="Description" placeholder="Açıklama Giriniz">
							</div>
							<div class="form-group">
								<label>Video Açıklama</label>
								<input type="text" class="form-control" asp-for="VideoDescription" placeholder="Video Açıklama Giriniz">
							</div>
							<div class="form-group">
								<label>Video URL</label>
								<input type="text" class="form-control" asp-for="VideoUrl" placeholder="Videonun Youtube URLsini Giriniz">
							</div>
							<button type="submit" class="btn btn-success waves-effect waves-light">Banner Bilgisi Güncelle</button>
						</form>

					</div>
				</div>
			</div>

		</div>
	</div>
</div>