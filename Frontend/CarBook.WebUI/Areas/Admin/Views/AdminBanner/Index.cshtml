@model List<CarBook.Dto.BannerDtos.ResultBannerDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Anasayfa Banner Alanı</h4>
						<p class="card-subtitle mb-4">
							Anasayfanın "Banner" alanında bulunan bilgileri görebilirsiniz. Ayrıca banner alanı ile ilgili ekleme, silme, güncelleme işlemlerini bu sayfa üzerinden yapabilirsiniz. Tema bütünlüğünün bozulmaması adına <strong>lütfen sadece 1 tane veri girişi yapınız!</strong>
						</p>
						<div class="table-responsive">
							<table class="table mb-0">
								<thead>
									<tr>
										<th>#</th>
										<th>Başlık</th>
										<th>Açıklama</th>
										<th>VideoUrl</th>
										<th>Video Açıklama</th>
										<th>Sil</th>
										<th>Güncelle</th>
										<th>Videoyu İzle</th>


									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										<tr>
											<th scope="row">@count</th>
											<td>@item.Title</td>
											<td>@item.Description</td>
											<td>@item.VideoUrl</td>
											<td>@item.VideoDescription</td>
											<td><a href="/Admin/AdminBanner/DeleteBanner/@item.BannerId" class="btn btn-outline-danger">Sil</a></td>
											<td><a href="/Admin/AdminBanner/UpdateBanner/@item.BannerId" class="btn btn-outline-success">Güncelle</a></td>
											<td><a href="/Admin/AdminBanner/UpdateBanner/@item.BannerId" class="btn btn-outline-dark">Videoyu İzle</a></td>
										</tr>
									}

								</tbody>
							</table>
							<a href="/Admin/AdminBanner/CreateBanner/" class="btn btn-primary">Yeni Banner Oluştur</a>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>

