@model List<CarBook.Dto.SocialMediaDtos.ResultSocialMediaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}


<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Sosyal Medya Hesap Linkleri</h4>
						<p class="card-subtitle mb-4">
							Kullandığınız sosyal medya hesaplarına ait linkleri yönetebileceğiniz alandır.
						<div class="table-responsive">
							<table class="table mb-0">
								<thead>
									<tr>
										<th>#</th>
										<th>Platform Adı</th>
										<th>Sil</th>
										<th>Güncelle</th>
										<th>Aç</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										<tr>
											<td scope="row">@count</td>
											<td>@item.Name</td>
											<td><a href="/Admin/AdminSocialMedia/DeleteSocialMedia/@item.SocailMediaId" class="btn btn-outline-danger">Sil</a></td>
												<td><a href="/Admin/AdminSocialMedia/UpdateSocialMedia/@item.SocailMediaId" class="btn btn-outline-success">Güncelle</a></td>
												<td><a href="/@item.Url/" target="_blank" class="btn btn-outline-dark">Aç</a></td>
										</tr>
									}

								</tbody>
							</table>
							<a href="/Admin/AdminSocialMedia/CreateSocialMedia" class="btn btn-primary">Yeni Platform Oluştur</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>




