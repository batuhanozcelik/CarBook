@model List<CarBook.Dto.PricingDtos.ResultPricingDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Ödeme Planları</h4>
						<p class="card-subtitle mb-4">
							Ödeme planlarının listesini bu sayfada görebilirsiniz. Ödeme planı ekleme, silme ve güncelleme işlemlerini bu sayfada gerçekleştirebilirsiniz.
						</p>
						<div class="table-responsive">
							<table class="table mb-0">
								<thead>
									<tr>
										<th>#</th>
										<th>Periyot Adı</th>
										<th>Sil</th>
										<th>Güncelle</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										<tr>
											<td scope="row">@count</td>
											<td>@item.Name</td>
											<td><a href="/Admin/AdminPricing/DeletePricing/@item.PricingId" class="btn btn-outline-danger">Sil</a></td>
											<td><a href="/Admin/AdminPricing/UpdatePricing/@item.PricingId" class="btn btn-outline-success">Güncelle</a></td>
										</tr>
									}

								</tbody>
							</table>
							<a href="/Admin/AdminPricing/CreatePricing/" class="btn btn-primary">Yeni Ödeme Türü Oluştur</a>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>



