@model List<CarBook.Dto.BlogDtos.ResultAllBlogsWithAuthor>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}


<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Blog Listesi ve İşlemleri</h4>
						<p class="card-subtitle mb-4">
							Blogların listesini bu sayfada görebilirsiniz. Blog silme işlemini bu sayfada gerçekleştirebilirsiniz. Blogu görüntüleyip yorumlarına ulaşabilirsiniz.
						</p>
						<div class="table-responsive">
							<table class="table mb-0">
								<thead>
									<tr>
										<th>#</th>
										<th>Başlık</th>
										<th>Yazar</th>
										<th>Kategori</th>
										<th>Tarih</th>
										<th>Sil</th>
										<th>Blog'u Aç</th>
										<th>Yorumlar</th>


									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										<tr>
											<td scope="row">@count</td>
											<td>@item.Title</td>
											<td>@item.AuthorName</td>
											<td>@item.CategoryName</td>
											<td>@item.CreatedDate.ToShortDateString()</td>
											<td><a href="/Admin/AdminBlog/DeleteBlog/@item.BlogId" class="btn btn-outline-danger">Sil</a></td>
											<td><a href="/Blog/BlogDetail/@item.BlogId" class="btn btn-outline-dark">Blog'u Aç</a></td>
											<td><a href="/Admin/AdminComment/Index/@item.BlogId" class="btn btn-outline-dark">Yorumlar</a></td>
										</tr>
									}

								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



