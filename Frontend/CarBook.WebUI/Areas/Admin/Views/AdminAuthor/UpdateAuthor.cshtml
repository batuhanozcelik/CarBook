@model CarBook.Dto.AuthorDtos.UpdateAuthorDto
@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Yazar Bilgisi Güncelleme</h4>
						<p class="card-subtitle mb-4">Yazar ile ilgili gerekli veri girişini yaptıktan sonra "Yazarı Güncelle" butonuna tıklayarak yazarı güncelleyebilirsiniz.</p>

						<form method="post">
							<div class="form-group">
								<input type="hidden" asp-for="AuthorId" />
								<label>Ad Soyad</label>
								<input type="text" class="form-control" asp-for="Name" placeholder="Başlık Giriniz">
							</div>
							<div class="form-group">
								<label>Açıklama</label>
								<input type="text" class="form-control" asp-for="Description" placeholder="Açıklama Giriniz">
							</div>
							<div class="form-group">
								<label>Görsel URL</label>
								<input type="text" class="form-control" asp-for="ImageUrl" placeholder="Görselin Linkini Giriniz">
							</div>
							<button type="submit" class="btn btn-success waves-effect waves-light">Yazarı Güncelle</button>
						</form>

					</div>
				</div>
			</div>

		</div>
	</div>
</div>


