@model List<CarBook.Dto.TestimonialDtos.ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}



<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Anasayfa Referanslar Listesi</h4>
						<p class="card-subtitle mb-4">
							Kullandığınız sosyal medya hesaplarına ait linkleri yönetebileceğiniz alandır.
							<div class="table-responsive">
								<table class="table mb-0">
									<thead>
										<tr>
											<th>#</th>
											<th>Ad Soyad</th>
											<th>Başlık</th>
											<th>Yorum</th>
											<th>Sil</th>
											<th>Güncelle</th>
										</tr>
									</thead>
									<tbody>
										@foreach (var item in Model)
										{
											count++;
											<tr>
												<td><img src="@item.imageURL" width="50" height="50"/></td>
												<td>@item.name</td>
												<td>@item.title</td>
												<td>@item.comment</td>
												<td><a href="/Admin/AdminTestimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-outline-danger">Sil</a></td>
												<td><a href="/Admin/AdminTestimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-outline-success">Güncelle</a></td>
											</tr>
										}

									</tbody>
								</table>
								<a href="/Admin/AdminTestimonial/CreateTestimonial" class="btn btn-primary">Yeni Referans Oluştur</a>
							</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>






