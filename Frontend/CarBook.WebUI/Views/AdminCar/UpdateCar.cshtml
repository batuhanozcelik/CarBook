@model CarBook.Dto.CarDtos.UpdateCarDto
@{
	ViewData["Title"] = "UpdateCar";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">

						<h4 class="card-title">Araç Güncelleme</h4>
						<p class="card-subtitle mb-4">Araç ile ilgili güncelleme yapacağınız sayfadır. Veri girişinden sonra "Aracı Güncelle" butonuna tıklayarak güncelleme işlemini tamamlayabilirsiniz</p>

						<form method="post">
							<input type="hidden" asp-for="CarId" />
							<div class="form-group">
								<label for="exampleInputEmail1">Marka</label>
								<select class="form-control" asp-for="BrandId" asp-items="@ViewBag.BrandValues">
									<option value=>Marka Seçiniz</option>
								</select>
							</div>
							<div class="form-group">
								<label>Model</label>
								<input type="text" class="form-control" asp-for="Model" placeholder="Model Girişi Yapınız">
							</div>
							<div class="form-group">
								<label>Kapak Fotoğrafı</label>
								<input type="text" class="form-control" asp-for="CoverImageUrl" placeholder="Kapak Fotoğrafı Linkini Giriniz">
							</div>
							<div class="form-group">
								<label>Büyük Fotoğraf</label>
								<input type="text" class="form-control" asp-for="ImageUrl" placeholder="Büyük Fotoğraf Linkini Giriniz">
							</div>
							<div class="form-group">
								<label>Kilometre</label>
								<input type="number" class="form-control" asp-for="Km" placeholder="Kilometre Bilgisi Giriniz">
							</div>
							<div class="form-group">
								<label>Şanzıman Türü</label>
								<input type="text" class="form-control" asp-for="Transmission" placeholder="Şanzıman Türünü Giriniz">
							</div>
							<div class="form-group">
								<label>Koltuk Sayısı</label>
								<input type="number" class="form-control" asp-for="Seat" placeholder="Şanzıman Türünü Giriniz">
							</div>
							<div class="form-group">
								<label>Bagaj Kapasitesi</label>
								<input type="number" class="form-control" asp-for="Luggage" placeholder="Bagaj Kapasitesini Giriniz">
							</div>
							<div class="form-group">
								<label>Yakıt Türü</label>
								<input type="text" class="form-control" asp-for="Fuel" placeholder="Yakıt Türünü Giriniz">
							</div>
							<button type="submit" class="btn btn-success waves-effect waves-light">Aracı Güncelle</button>
						</form>
					</div> 
				</div> 
			</div>
		</div>
	</div>
</div>

