@model CarBook.Dto.ReservationDtos.CreateReservationDto
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section contact-section">
	<div class="container">
		<div class="row d-flex mb-5 contact-info">
			<div class="col-md-12 block-9 mb-md-5">
				<h3>Araç Rezervasyon Formu</h3>
				<br />
				<form class="bg-light p-5 contact-form" method="post">

					<input type="hidden" class="form-control" asp-for="CarId" value="@ViewBag.v3">

					<div class="form-group">
						<input type="text" class="form-control" asp-for="Name" placeholder="Adınız">
					</div>
					<div class="form-group">
						<input type="text" class="form-control" asp-for="Surname" placeholder="Soyadınız">
					</div>
					<div class="form-group">
						<input type="email" class="form-control" asp-for="Email" placeholder="Email Adresiniz">
					</div>
					<div class="form-group">
						<input type="tel" class="form-control" asp-for="Phone" placeholder="Telefon Numaranız">
					</div>
					<div class="form-group">
						<select class="form-control" asp-for="PickUpLocationId" asp-items="@ViewBag.v">
							<option value=>Teslim Alma Noktası Seçiniz</option>
						</select>
					</div>
					<div class="form-group">
						<select class="form-control" asp-for="DropOffLocationId" asp-items="@ViewBag.v">
							<option value=>İade Etme Noktası Seçiniz</option>
						</select>
					</div>
					<div class="form-group">
						<input type="text" class="form-control" asp-for="Age" placeholder="Yaşınız">
					</div>
					<div class="form-group">
						<input type="text" class="form-control" asp-for="DriverLicenseYear" placeholder="Ehliyet Yılınız">
					</div>
					<div class="form-group">
						<textarea cols="30" rows="7" class="form-control" asp-for="Description" placeholder="Varsa Eklemek İstedikleriniz"></textarea>
					</div>
					<div class="form-group">
						<input type="submit" value="Rezervasyonu Tamamla" class="btn btn-primary py-3 px-5">
					</div>
				</form>

			</div>
		</div>
	</div>
</section>

